# layout mode
workspace_layout tabbed
# bindsym Mod4+q exec --no-startup-id gksudo bash -c 'echo "mem" > /sys/power/state'
# bindsym Mod1+q exec echo "mem"
# bindsym Mod4+l exec bash -c 'echo "mem" > /sys/power/state'
# bindsym Mod1+q exec --no-startup-id sudo pm-suspend
# 锁屏和挂起
set $mode_system System (l) lock, (s) suspend
mode "$mode_system" {
	# 锁屏和挂起
	bindsym l exec --no-startup-id i3exit lock, mode "default"
	bindsym s exec --no-startup-id i3exit suspend, mode "default"
	# 返回正常模式
	bindsym Escape mode "default"
}
bindsym Mod4+l mode "$mode_system"

